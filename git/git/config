[alias]
	adog = log --all --decorate --oneline --graph
	b = branch --show-current
	cl = log --pretty='- %s'
	cp = cherry-pick
	wt = worktree
	f = fetch
    l = log --pretty='%C(yellow)%h %C(cyan)%ad %C(blue)%an%C(auto)%d %s' --date='format:%d/%m/%y %H:%M:%S'
	p = pull
	pr = pull --rebase
	s = status --short --branch
    gone = "!git for-each-ref --format='%(refname:short) %(upstream:track)' refs/heads/ | rg '^(\\S+) \\[gone\\]$' -r '$1'"
    # bclean = "!git gone | xargs -r git branch -D"
    # up = !git pull --rebase --prune $@ && git submodule update --init --recursive

